{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-08842d60",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "Wordpress ({{isotime | clean_ami_name}})",
      "tags": {
        "Name": "Wordpress"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "resources/wp-config.php",
      "destination": "/tmp/wp-config.php"
    },
    {
      "type": "shell",
      "inline": [
        "sudo yum -y update",
        "sudo yum -y install httpd php php-mysql mod_ssl",
        "sudo chkconfig --add httpd",
        "sudo chkconfig httpd on",
        "sudo groupadd www",
        "sudo usermod -a -G www apache",
	"wget https://wordpress.org/latest.tar.gz",
        "tar -xzf latest.tar.gz",
        "rm latest.tar.gz",
        "sudo mv wordpress/* /var/www/html/",
        "sudo mv /tmp/wp-config.php /var/www/html/",
	"sudo chgrp -R www /var/www/html/",
        "sudo chown -R root /var/www/html/",
	"sudo chmod 775 /var/www/html/wp-content/",
      ]
    }
  ]
}
